/**************************最外层最大的盒子(用来设置页面背景)********************************/
.pipeiResult-box{
  width: 100%;
  height: 1216rpx;  
  background:url("http://xingzuo.haixinggo.com/Public/img/bimg/pipeiResultBack.png") no-repeat left top;
  background-size: 100% 100%; 
}
.top-box{
  width: 100%;
}
.top-box>.head-box{
  width: 84%;
   height: 185rpx; 
   padding: 0 8%; 
}
.top-box>.tips{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  height: 102rpx;
  line-height: 102rpx;
}
.shareer{
  float: left;
   width: 30%;
}
.joiner{
  float: right;
   width: 30%;
}
.arrows-box{
  float: left;
  margin: 0 auto;
  width: 39%;
  margin-top: 50rpx;
}
.arrows-box>image{
  width: 126rpx;
  height: 63rpx;
  display: block;
  margin: 0 auto;
}
.joiner{
  float: right;
}
.shareer>image,.joiner>image{
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  display: block;
  border-radius: 99rpx;
}
.shareer>text,.joiner>text{
  display: block;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  margin-top: 14rpx;
  width: 100%;
  overflow: hidden;
   text-overflow:ellipsis;
   white-space: nowrap;
}

.pipei-resut{
  width: 100%;
}
.baifenbi{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 70rpx;
  color:#dd1464;
  margin-top: -16rpx;
}
.result-wenzi{
   display: block;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color:#fff;
  margin-bottom: 16rpx;
  margin-top: 6rpx;
}

/********排行榜*******/
.section{
  width: 100%;
}
.rank-title{
  width: 90%;
  padding: 0 5%;
  height:129rpx;
}
.rank-title>image{
  width: 100%;
  height: 129rpx;
}
.rank-list{
  display: block;
  width: 80%;
  margin:  0 10%;
  height: 474rpx;
  background-color: #fff;
  margin-top: -36rpx;
}
.rank-box{
   margin-top: 24rpx; 
}
.rank-bar{
  width: 94%;
   margin: 0 2%; 
  height: 80rpx;
  line-height: 80rpx;
  padding: 5rpx 0; 
  border-bottom: 1px solid #e4e4e4;
}
.rank-bar>view{
  float: left;
}
.b0{
  background: url("http://xingzuo.haixinggo.com/Public/img/bimg/one.png") no-repeat left center;
  background-size: 60rpx 61rpx;
}
.b1{
  background: url("http://xingzuo.haixinggo.com/Public/img/bimg/two.png") no-repeat left center;
  background-size: 60rpx 61rpx;
}
.b2{
  background: url("http://xingzuo.haixinggo.com/Public/img/bimg/three.png") no-repeat left center;
  background-size: 60rpx 61rpx;
}
.num{
  width: 10%;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  text-align: center;
  margin-left:4%;
  font-size: 30rpx;
  font-weight: bold;
}
.head-icon{
  width: 80rpx;
  height: 85rpx;
  margin-left: 14rpx;
  margin-right: 10rpx;
}
.head-icon>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 99rpx;
}
.name{
   width: 50%;
   font-size: 26rpx;
   color: #000;
   padding-left: 10rpx;
    overflow: hidden;
   text-overflow:ellipsis;
   white-space: nowrap;
   text-align:left;
}
.value{
  font-size: 26rpx;
  float: right;
  width: 10%;
  padding-right: 4%;
  font-weight: bold;
}
.more-btn{
  text-align: center;
  font-size: 24rpx;
  color: #727272;
  width: 80%;
  border-radius: 0;
  background-color: #fff;
  border: none;
  height: 80rpx;
  line-height: 80rpx;
}



/*********底部按钮-我也要玩*****************/
.wan{
  border-radius: 0;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  background-color: #53cef7;
  width: 100%;
  height: 89rpx;
  line-height: 89rpx;
  position: fixed;
  bottom: 0;
  animation: sport 1.05s linear infinite; 
}

<view class='shareJoin-box' style='height:{{windowHeight}}'>
  <text class='title-t'>选择自己的星座，查看自己与TA的奇缘</text>
  <view class='head-box'>
    <view class='share-icon-box'>
       <image src='{{head_f}}' class='share-icon'></image>  
       <text>{{constellation_f}}</text>
    </view>

    <view class='join-icon-box' bindtap='joinEvent'>
       <image src='{{avatarUrl}}' class='join-icon'></image>
       <text class='text_j'>{{constellation_j}}</text>
    </view> 
  </view>

  <!-- 用户信息 -->
    <view class='user-box'>
      <image src='{{gender==1?"../../images/manicon.png":"../../images/womanicon.png"}}' class='gender-icon'></image>
      <text class='gender'>{{gender==1?"男":gender==2?"女":""}}</text>
    </view>

    <!-- <button class='pipei-btn' bindtap='pipeiEvent'>星座速配</button> -->
    <form bindsubmit="formSubmit" report-submit='true'>
      <button formType="submit" class='pipei-btn'>星座速配</button>
    </form>
</view>

/**************************最外层最大的盒子(用来设置页面背景)********************************/
.shareJoin-box{
  width: 100%;
  height: 1216rpx;  
  background:url("http://xingzuo.haixinggo.com/Public/img/bimg/shareBack.png") no-repeat left top;
  background-size: 100% 100%; 
}
/******顶部标题文字*********/
.title-t{
  display: block; 
  text-align: center;
  color: #dd1464;
  font-size: 34rpx;
  padding-top: 90rpx;
}
/********头像***********/
.head-box{
  width: 100%;
}
.head-box>view{
  display: block;
  margin: 0 auto;
  width: 226rpx;
  height: 226rpx;
  position: relative;
}
.head-box>view>image{
  display: block;
  margin: 0 auto;
  width: 226rpx;
  height: 226rpx;
  border-radius: 999px;
  position: absolute;
}
.head-box>.share-icon-box{
  margin-top: 70rpx;
  margin-bottom: 90rpx;
}
.head-box>.share-icon-box>text{
   display: block;
   position: absolute;
   color: #fff;
   font-size: 30rpx;
   bottom: 0;
   width: 60%;
   left: 19%;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   background: #000;
   opacity: 0.6;
   border-radius: 888px;
}
.head-box>.join-icon-box>text{
   display: block;
   position: absolute;
   color: #fff;
   font-size: 30rpx;
   bottom: 0;
   width: 60%;
   left: 19%;
   height: 60rpx;
   line-height: 60rpx;
   text-align: center;
   background: #000;
   opacity: 0.6;
   border-radius: 888px;
}
.head-box>.join-icon-box>text.text_j{
  color:yellow;
  font-weight: bold;
}
/*******用户性别************/
.user-box{
  width: 100%;
  margin-top: 66rpx;
}
.user-box>.gender-icon{
  display: block;
  margin: 0 47%;
  width: 62rpx;
  height: 67rpx;
}
.user-box>.gender{
  display: block;
  color: #fff;
  text-align: center;  
  font-size: 40rpx;
  margin-top: 20rpx;
}
